---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");

const uniqueTags = [
    ...new Set(allPosts.map((post: any) => post.data.tags).flat()),
];
---

<BaseLayout pageTitle="Tags">
    <p>
        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Illum totam et
        accusamus hic vitae id. Natus illum in pariatur tenetur ut, nihil itaque
        velit voluptatem qui, repellendus quibusdam quidem dolorem.
    </p>

    <ul>
        {
            uniqueTags.map((tag: string) => (
                <li>
                    <a href={`/tags/${tag}/`}>{tag}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>
